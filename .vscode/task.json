{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile and run active file",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "group": "build",
            "problemMatcher": ["$gcc"],
            "dependsOn": ["run exe"]
        },
        {
            "label": "run exe",
            "type": "shell",
            "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "problemMatcher": []
        }
    ]
}
